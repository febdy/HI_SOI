       				post_no postNo,
                    post_title postTitle,
                    post_soi_cnt postSoiCnt,
                    post_cmt_cnt postCmtCnt,
                    post_hit_cnt postHitCnt
			from (select ROWNUM rn,
                				post_no,
                    			post_title,
                    			post_soi_cnt,
                    			post_cmt_cnt,
                    			post_hit_cnt
        			from (select post_no,
                    			post_title,
                    			post_soi_cnt,
                    			post_cmt_cnt,
                    			post_hit_cnt
                			from post po
							where writer_id=#{userId}
                			order by post_no desc) o) t
			where rn > #{startRnum}
