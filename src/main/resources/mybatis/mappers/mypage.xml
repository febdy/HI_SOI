	<!-- 영상관리 페이징 -->
	<select id="selectPageForMyVideoList" parameterType="map" resultType="com.bit.hi.domain.vo.VideoVo">
		<![CDATA[
			select rn,
       				video_no videoNo,
        			video_origin_name videoOriginName,
        			to_char(video_date, 'YYYY-MM-DD HH:MI') videoDate
			from (select ROWNUM rn,
                				video_no,
                    			video_origin_name,
                    			video_date
        			from (select video_no,
                    			video_origin_name,
                    			video_date
                			from video
                			where user_id=#{userId}
                			order by video_no desc) o) t
			where rn > #{startRnum}
			and rn <= #{endRnum}
		]]> <!-- 세미콜론 지우는 것 꼭 확인 -->
	</select> <!-- 페이징을 다 한뒤, 검색기능을 쿼리문에 추가해준다. -->
	<!-- 영상관리 페이징 -->
	<select id="selectTotalCountForMyVideo" resultType="int">
		<![CDATA[
			select count(*)
			from notice
		]]>
	</select>
	
	<!-- 내 댓글 페이징 -->
	<select id="selectCollectCommentList" parameterType="map" resultType="com.bit.hi.domain.vo.CommentVo">
		<![CDATA[
			select rn,
       				post_no postNo,
        			writer_id writerId,
        			post_title postTitle,
        			to_char(cmt_date, 'YYYY-MM-DD HH:MI') cmtDate
			from (select ROWNUM rn,
                				post_no,
                    			writer_id,
                    			post_title,
                    			cmt_date
        			from (select co.post_no,
                    			po.writer_id,
                    			po.post_title,
                    			cmt_date
                			from comments co, post po
							where co.post_no=po.post_no
							and co.user_id=#{userId}
                			order by post_no desc) o) t
			where rn > #{startRnum}
			and rn <= #{endRnum}
		]]> <!-- 세미콜론 지우는 것 꼭 확인 -->
	</select> <!-- 페이징을 다 한뒤, 검색기능을 쿼리문에 추가해준다. -->
